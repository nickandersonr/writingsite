\par \pard\plain \ltrpar\s1\rtlch\afs24\lang255\ltrch\dbch\af4\langfe255\hich\fs24\lang1033\loch\fs24\lang1033 {\rtlch \ltrch\loch\f2\fs24\lang1033\i0\b0 \tab \'93Do you know what a rainbow kiss is?\'94}
